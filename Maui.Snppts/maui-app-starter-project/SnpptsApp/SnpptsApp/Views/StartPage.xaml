<?xml version="1.0" encoding="utf-8" ?>
<views:ViewBase
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:views="clr-namespace:SnpptsApp.Base.Views"
    xmlns:viewmodels="clr-namespace:SnpptsApp.ViewModels"
    x:TypeArguments="viewmodels:StartPageViewModel"
    x:Class="SnpptsApp.Views.StartPage"
    PageTitle="{Binding Title}"
    ContentDisplayMode="NavigationBar"
    PageMode="Menu"
    x:Name="RootPage">

    <views:ViewBase.PageContent>

        <Grid
            IgnoreSafeArea="True"
            RowDefinitions="Auto,Auto,*,Auto"
            IsVisible="{Binding DataLoaded, Mode=OneWay}">

            <Label Text="Hello" />

        </Grid>

    </views:ViewBase.PageContent>

</views:ViewBase>
